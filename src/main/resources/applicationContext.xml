<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!--dependency injection by setters-->

	<!-- bean definitions here -->
	
	<bean id="address" class="com.spring.spring_core.model.Address" scope="prototype">
		<property name="city" value="Prayagraj"></property>
		<property name="state" value="UP"></property>
		<property name="country" value="India"></property>
		<property name="pinCode" value="222222"></property>
	</bean>

	<bean id="emp" class="com.spring.spring_core.model.Employee">
		<property name="name" value="Sujeet Verma"></property>
		<property name="gender" value="Male"></property>
		<lookup-method name="applyAddress" bean="address"/>
	</bean>

